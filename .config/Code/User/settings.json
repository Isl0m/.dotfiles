{
  // Font
  "editor.fontFamily": "'FiraCode Nerd Font', 'Hack Nerd Font', 'BlexMono Nerd Font', 'JetBrainsMono Nerd Font', 'CaskaydiaCove Nerd Font',  monospace",
  "editor.fontSize": 16,
  // == ->
  "editor.fontLigatures": true,
  "terminal.integrated.fontSize": 17,
  // Top Menu Bar
  "window.menuBarVisibility": "toggle",

  "workbench.activityBar.visible": false,

  "editor.minimap.enabled": false,
  "editor.glyphMargin": false,

  // Formatting
  "editor.formatOnSave": true,
  "explorer.confirmDragAndDrop": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,

  // Themes
  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "One Dark Space Gray",
  "workbench.productIconTheme": "fluent-icons",

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,

  "typescript.updateImportsOnFileMove.enabled": "always",

  // TailwindCSS support for cva or class validation authority
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],
  "explorer.confirmDelete": false,
  "workbench.startupEditor": "none",

  // For Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  // Console ninja
  "console-ninja.toolsToEnableSupportAutomaticallyFor": {
    "live-server-extension": true,
    "live-preview-extension": true
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "codesandbox.currentWorkspace": "494dade9-a931-4b23-8d3d-2645b2b92a62",
  "symbols.hidesExplorerArrows": false,

  "terminal.integrated.env.linux": {},
  "cSpell.userWords": ["denullable", "trpc"],
  "window.zoomLevel": 1
}
